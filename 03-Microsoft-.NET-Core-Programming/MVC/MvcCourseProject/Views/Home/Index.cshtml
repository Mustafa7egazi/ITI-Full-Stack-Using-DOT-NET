@{
    ViewData["Title"] = "Home Page";
}

<style>
    .welcome-section {
        text-align: center;
        padding: 2rem 0;
        margin-bottom: 2rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .welcome-section h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .welcome-section p {
            font-size: 1.1rem;
            color: #555;
            max-width: 600px;
            margin: 0 auto;
        }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        padding: 1rem;
    }

    .nav-card {
        width: 300px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

        .nav-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 20px rgba(0, 0, 0, 0.15);
        }

    .card-icon {
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        color: white;
    }

    .instructor-icon {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .trainee-icon {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
    }

    .course-icon {
        background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
    }

    .card-content {
        padding: 1.5rem;
        text-align: center;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .card-description {
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .card-link {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: #f8f9fa;
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease, color 0.3s ease;
        border: 2px solid #e9ecef;
    }

    .instructor-link:hover {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }

    .trainee-link:hover {
        background-color: #ffc107;
        color: #333;
        border-color: #ffc107;
    }

    .course-link:hover {
        background-color: #4CAF50;
        color: white;
        border-color: #4CAF50;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .cards-container

    {
        flex-direction: column;
        align-items: center;
    }

    .nav-card {
        width: 100%;
        max-width: 350px;
    }

    }
</style>

<div class="welcome-section">
    <h1 class="display-4">Welcome to Training Management</h1>
    <p>Manage your instructors, trainees, and courses with our comprehensive training management system.</p>
</div>

<div class="cards-container">
    <!-- Instructors Card -->
    <div class="nav-card">
        <div class="card-icon instructor-icon">
            👨‍🏫
        </div>
        <div class="card-content">
            <h2 class="card-title">Instructors</h2>
            <p class="card-description">View all instructors in the training program.</p>
            <a href="/Instructor/GetAllInstructors" class="card-link instructor-link">View All Instructors</a>
        </div>
    </div>

    <!-- Trainees Card -->
    <div class="nav-card">
        <div class="card-icon trainee-icon">
            👨‍🎓
        </div>
        <div class="card-content">
            <h2 class="card-title">Trainees</h2>
            <p class="card-description">View all trainees in the training program.</p>
            <a href="/Trainee/GetAllTrainees" class="card-link trainee-link">View All Trainees</a>
        </div>
    </div>

    <!-- Courses Card (New) -->
    <div class="nav-card">
        <div class="card-icon course-icon">
            📚
        </div>
        <div class="card-content">
            <h2 class="card-title">Courses</h2>
            <p class="card-description">View all courses in the training program.</p>
            <a href="/Course/GetAllCourses" class="card-link course-link">View All Courses</a>
        </div>
    </div>
</div>