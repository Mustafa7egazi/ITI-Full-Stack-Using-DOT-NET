@model Course;
@{
    ViewData["Title"] = "Add New Course";
    SelectList DeptList = new SelectList(ViewBag.Departments, "Id", "Name");
}

<h1 class="w-100 text-center">Adding New Course</h1>

<div class="container d-flex w-100 justify-content-center">

    <form class="w-75 mx-auto" asp-action="SaveNewCourse" asp-controller="Course" method="post">

        <div class="text-danger" asp-validation-summary="All"></div>


        <div class="form-group">
            <label asp-for="Name">Course Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Degree">Course Degree</label>
            <input asp-for="Degree" class="form-control" />
            <span asp-validation-for="Degree" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MinDegree">Course Min Degree</label>
            <input asp-for="MinDegree" class="form-control" />
            <span asp-validation-for="MinDegree" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hours">Course Hours</label>
            <input asp-for="Hours" class="form-control" />
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>
        <label asp-for="DepartmentId"></label>
        <select class="form form-control"
                asp-items="@DeptList"
                asp-for="DepartmentId">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
        <input type="submit" class="btn btn-success mt-5 py-2 px-5" name="name" value="Save" />
    </form>
</div>

<!--Client Side Validdation import 3 Jquery PAckage-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>